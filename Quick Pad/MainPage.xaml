                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton x:Name="BulletList" Label="Bullets"  Width="Auto" MinWidth="40" Visibility="Visible" Icon="List" Click="BulletList_Click" HorizontalAlignment="Stretch" ToolTipService.ToolTip="Toggle Bullets"/>
