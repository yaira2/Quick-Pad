<Page
	x:Class="QuickPad.UI.Controls.Settings.About"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:QuickPad.UI.Controls.Settings"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:winui="using:Microsoft.UI.Xaml.Controls"
	d:DesignWidth="400"
	mc:Ignorable="d">

	<Grid Margin="12">
		<Grid.Resources>
			<Style TargetType="TextBlock">
				<Setter Property="Margin" Value="0,8,0,4" />
				<Setter Property="TextWrapping" Value="Wrap" />
				<Setter Property="FontFamily" Value="Segoe UI" />
			</Style>
		</Grid.Resources>

		<StackPanel>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="80" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="40" />
					<RowDefinition Height="40" />
				</Grid.RowDefinitions>

				<Image
					Grid.RowSpan="2"
					Source="/Assets/QuickPadIcon.png"
					Stretch="Uniform" />
				<TextBlock
					x:Uid="AppName"
					Grid.Column="1"
					Padding="12,0,0,0"
					FontSize="22"
					Text="Quick Pad" />
				<TextBlock
					Grid.Row="1"
					Grid.Column="1"
					Padding="12,0,0,0"
					Text="{x:Bind Settings.VersionNumberText}" />
			</Grid>

			<HyperlinkButton
				x:Uid="Sponsor"
				Margin="0,12,0,0"
				AutomationProperties.Name="Sponsor"
				Content="Sponsor"
				NavigateUri="https://github.com/sponsors/yaira2" />

			<HyperlinkButton
				x:Uid="PrivacyPolicy"
				AutomationProperties.Name="Privacy Policy"
				Content="Privacy Policy"
				NavigateUri="https://github.com/files-community/Files/blob/main/.github/PRIVACY.md" />
		</StackPanel>
	</Grid>
</Page>