                    x:Uid="MarkdownPreview"
                    AccessKey="M"
                    Command="{x:Bind Commands.ShowMarkdownViewerCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Markdown Preview">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8A1;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutSubItem
                    x:Uid="Zoom"
                    AccessKey="Z"
                    Text="Zoom">
                    <MenuFlyoutSubItem.Icon>
                        <FontIcon Glyph="&#xE740;" />
                    </MenuFlyoutSubItem.Icon>
                    <MenuFlyoutItem
                        x:Uid="ZoomIn"
                        AccessKey="I"
                        Command="{x:Bind Commands.ZoomInCommand}"
                        CommandParameter="{x:Bind ViewModel}"
                        Text="Zoom In">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE12E;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Add" Modifiers="Control" />
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Uid="ZoomOut"
                        AccessKey="O"
                        Command="{x:Bind Commands.ZoomOutCommand}"
                        CommandParameter="{x:Bind ViewModel}"
                        Text="Zoom Out">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE1A4;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
