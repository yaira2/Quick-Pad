            x:Name="CommandBar"
            HorizontalAlignment="Right"
            x:Load="{x:Bind converters:Converter.VisibleIfMenuMode(Settings.CurrentMode)}"
            Background="{x:Null}"
            DefaultLabelPosition="Collapsed"
            IsOpen="False">
