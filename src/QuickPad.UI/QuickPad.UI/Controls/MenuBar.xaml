<UserControl
    x:Class="QuickPad.UI.Controls.MenuBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converters="using:QuickPad.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    d:DesignHeight="40"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Stretch">
        <controls:MenuBar
            Width="Auto"
            Height="40"
            HorizontalAlignment="Left">
            <controls:MenuBarItem
                x:Uid="File"
                Title="File"
                AccessKey="F">
                <MenuFlyoutItem
                    x:Uid="New"
                    AccessKey="N"
                    Command="{x:Bind Commands.NewDocumentCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="New">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE160;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="N" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="Open"
                    AccessKey="O"
                    Command="{x:Bind Commands.LoadCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Open">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xF12B;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="O" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="Save"
                    AccessKey="S"
                    Command="{x:Bind Commands.SaveCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Save">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE105;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="SaveAs"
                    AccessKey="A"
                    Command="{x:Bind Commands.SaveAsCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Save As...">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE792;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S" Modifiers="Control, Shift" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem
                    x:Uid="Share"
                    AccessKey="H"
                    Command="{x:Bind Commands.ShareCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Share">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE72D;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem
                    x:Uid="Exit"
                    AccessKey="X"
                    Command="{x:Bind Commands.ExitCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Exit">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE10A;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </controls:MenuBarItem>
            <controls:MenuBarItem
                x:Uid="Edit"
                Title="Edit"
                AccessKey="E">
                <MenuFlyoutItem
                    x:Uid="Undo"
                    AccessKey="U"
                    Command="{x:Bind Commands.UndoCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Undo">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE10E;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="Redo"
                    AccessKey="E"
                    Command="{x:Bind Commands.RedoCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Redo">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE10D;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem
                    x:Uid="Cut"
                    AccessKey="T"
                    Command="{x:Bind Commands.CutCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Cut">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE16B;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="Copy"
                    AccessKey="C"
                    Command="{x:Bind Commands.CopyCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Copy">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE16F;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="Paste"
                    AccessKey="P"
                    Command="{x:Bind Commands.PasteCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Paste">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE16D;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="Delete"
                    AccessKey="L"
                    Command="{x:Bind Commands.DeleteCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Delete">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE107;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem
                    x:Uid="SearchBing"
                    AccessKey="S"
                    Command="{x:Bind Commands.BingCommand}"
                    CommandParameter="{x:Bind Settings}"
                    Text="Search with Bing...">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xF6FA;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="E" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="Find"
                    AccessKey="F"
                    Command="{x:Bind Commands.ShowFindCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Find">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE1A3;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="FindNext"
                    AccessKey="N"
                    Command="{x:Bind Commands.FindNextCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Find Next">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE0AB;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F3" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="FindPrevious"
                    AccessKey="V"
                    Command="{x:Bind Commands.FindPreviousCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Find Previous">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE0A6;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F3" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="Replace"
                    AccessKey="R"
                    Command="{x:Bind Commands.ShowReplaceCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Replace">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE13E;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="H" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="GoTo"
                    AccessKey="G"
                    Command="{x:Bind Commands.ShowGoToCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Go To">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="G" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xEA55;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem
                    x:Uid="SelectAll"
                    AccessKey="A"
                    Command="{x:Bind Commands.SelectAllCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Select All">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE14E;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="TimeDate"
                    AccessKey="D"
                    Command="{x:Bind Commands.InsertTimeDateCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    Text="Time/Date">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xEC92;" />
                    </MenuFlyoutItem.Icon>
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F5" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </controls:MenuBarItem>
            <controls:MenuBarItem
                x:Uid="Format"
                Title="Format"
                AccessKey="O">
                <ToggleMenuFlyoutItem
                    x:Uid="WordWrap"
                    Command="{x:Bind Commands.ToggleWordWrapCommand}"
                    CommandParameter="{x:Bind ViewModel}"
                    IsChecked="{x:Bind ViewModelDocument.CurrentWordWrap}"
                    Text="Word Wrap">
                    <ToggleMenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE751;" />
                    </ToggleMenuFlyoutItem.Icon>
                    <ToggleMenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Z" Modifiers="Menu" />
                    </ToggleMenuFlyoutItem.KeyboardAccelerators>
                </ToggleMenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem
                    x:Uid="Fonts"
                    AccessKey="F"
                    Command="{x:Bind Commands.ShowFontsCommand}"
                    CommandParameter="{x:Bind Settings}"
                    Text="Fonts...">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE185;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </controls:MenuBarItem>
            <controls:MenuBarItem
                x:Uid="View"
                Title="View"
                AccessKey="V">
                <MenuFlyoutItem
                    x:Uid="BackToDefault"
                    AccessKey="D"
                    Command="{x:Bind Commands.ShowCommandBarCommand}"
                    CommandParameter="{x:Bind Settings}"
                    Text="Back to Default Mode">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE112;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="FocusMode"
                    AccessKey="F"
                    Command="{x:Bind Commands.FocusCommand}"
                    CommandParameter="{x:Bind Settings}"
                    Text="Focus Mode">
                    <MenuFlyoutItem.Icon>
